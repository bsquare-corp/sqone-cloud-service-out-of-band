  "description": "The service for managing out-of-band messaging",
  "main": "dist/index.js",
  "author": "BSquare EMEA",
  "license": "UNLICENCED",
  "scripts": {
    "build": "tsc && ./copy.sh",
    "start": "node dist/index.js",
    "test:cleanup": "docker-compose -f dev/test/docker-compose.yml down",
    "test:integration": "docker-compose -f dev/test/docker-compose.yml pull && nyc mocha --exit --timeout 120000 dist/test/integration-wrapper --recursive dist/test/integration",
    "test": "yarn test:cleanup && yarn test:integration",
    "clean": "rm -rf dist/* *.tsbuildinfo .schemabuildinfo",
    "lint": "eslint --ext .ts src && prettier --check '**/*.{json,md,yaml,yml}'",
    "fix": "eslint --fix --ext .ts src && prettier --check --write '**/*.{json,md,yaml,yml}'"
  },
  "devDependencies": {
    "@bsquare/eslint-config": "^4.2.1",
    "@bsquare/shared-types": "^2.3.1",
    "@types/chai": "4.2.11",
    "@types/express": "4.17.1",
    "@types/mocha": "7.0.2",
    "@types/node": "16",
    "@types/node-fetch": "2.5.8",
    "@typescript-eslint/eslint-plugin": "5.59.8",
    "@typescript-eslint/parser": "5.59.8",
    "chai": "4.2.0",
    "eslint": "8.41.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-deprecation": "1.4.1",
    "eslint-plugin-import": "npm:eslint-plugin-i@>=2.27.5-2",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-security": "^1.7.1",
    "http-proxy-middleware": "^2.0.6",
    "mocha": "^10.2.0",
    "node-fetch": "2.6.7",
    "nyc": "^15.1.0",
    "prettier": "2.8.8",
    "typescript": "5.0.4"
  },
  "dependencies": {
    "@bsquare/base-service": "^5.3.0",
    "@bsquare/companion-common": "5.37.4",
    "@bsquare/companion-service-common": "^5.3.0",
    "argon2": "^0.31.1",
    "express": "^4.18.2",
    "lru-cache": "^10.0.1",
    "source-map-support": "^0.5.12",
    "tslib": "2.5.2"
  }
}
